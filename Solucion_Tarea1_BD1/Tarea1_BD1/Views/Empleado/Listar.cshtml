
@model IEnumerable<Tarea1_BD1.Models.Empleado>

@{
    ViewData["Title"] = "Empleados";
}

<h1>Lista de Empleados</h1>

<div>
    <div style="width:auto;height:800px;overflow:auto">
        <table class="table table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salario)
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salario)
                    </td>
                </tr>
            }
        </table>
    </div>
    @* Ve después si se arregla y se cambia por un botón en vez de dejar un link *@
