<!DOCTYPE html>
<html lang="en">
<head>

</head>
<body>
    <div>
        <h1>
            Agregar Empleados
        </h1>
        <div class="form-floating">
            @* <form id="formAgregarEmpleado" onsubmit="return validarFormulario();" asp-action="IngresarEmpleadoEnBD" asp-controller="Empleado" method="post"> *@
            @* <form id="formAgregarEmpleado" asp-action="IngresarEmpleadoEnBD" asp-controller="Empleado" method="post"> *@
            <form id="formAgregarEmpleado" asp-action="ValidarDataAnnotations" asp-controller="Empleado" method="post">
                <div class="mt-5">
                    <label for="entradaNombre">
                        Nombre:
                    </label>
                    <input type="text" id="entNom" name="entradaNombre" class="form-control" placeholder="Escriba el nombre aquí">
                    @* <span asp-validation-for="Nombre" class="text-danger"></span> *@
                    @Html.ValidationMessageFor(d => d.Nombre, "", new {@class="text-danger"})<br />
                </div>

                <div class="mt-3">
                    <label for="entradaSalario">
                        Salario:
                    </label>
                    <input type="text" id="entSal" name="entradaSalario" class="form-control" placeholder="Escriba el salario aquí">
                    @* <span asp-validation-for="Salario" class="text-danger"></span> *@
                    @Html.ValidationMessageFor(d => d.Salario, "", new { @class = "text-danger" })<br />
                </div>

                <div class="mt-3" id="div-botones">
                    <input type="submit" id="btnSubmit" class="btn btn-primary" value="Insertar">
                    @* Se puede quitar la propiedad onclick="btnSubmit_Click" y quita el refresco despues de la pagina del todo    linea estaba comentada *@
                    @* <asp:button type="submit" id="btnSubmit" class="btn btn-primary">Insertar</asp:button> *@
                    <input type="submit" id="btnBack" class="btn btn-primary" value="Regresar" asp-controller="Empleado" asp-action="Listar">
                    @* <asp:button type="submit" id="btnBack" class="btn btn-primary" asp-controller="Empleado" asp-action="Listar">Regresar</asp:button> *@
                </div>
            </form>
        </div>
    </div>

    <div id="overlay" class="class-overlay"></div>

    <div id="elPopup" class="contenedorPopup">
        <div id="contenedorForm">

            <h5 id="tituloPopup">Aviso</h5>
            <label id="labelParaAviso"></label>
            <button id="btnCerrarPopup" onclick="showPopup()">X</button>

        </div>
    </div>
</body>
</html>
